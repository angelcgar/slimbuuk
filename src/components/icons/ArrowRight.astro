---
interface Props {
  class: string;
}
const { class: className } = Astro.props;
---

<svg class={className} aria-hidden="true" fill="none" viewBox="0 0 14 10">
  <path
    stroke="currentColor"
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="2"
    d="M1 5h12m0 0L9 1m4 4L9 9"></path>
</svg>

<style>
  svg {
    height: 50px;
    padding: 2px;
    margin-left: 15px;
    margin-top: 9px;
    cursor: pointer;
    z-index: 2;
  }
  @media (width >= 500px) {
    svg {
      display: none;
    }
  }
</style>
