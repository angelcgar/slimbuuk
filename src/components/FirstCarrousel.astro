<div class="slider">
  <img
    class="slider-img"
    src="/public/img/dos-laptop.webp"
    alt="imagen de dos laptops"
  />
  <img
    class="slider-img"
    src="/public/img/laptop.webp"
    alt="una imagen de una laptop"
  />
  <img
    class="slider-img"
    src="/public/img/torre.webp"
    alt="una imagen de una computadora de sobre mesa"
  />
