<style>
  .slider {
    position: relative;
    height: 600px;
    /* display: bl; */
  }
  .slider-img:first-child {
    position: absolute;
    z-index: 3;
  }
  .slider-img:nth-child(2) {
    position: absolute;
    left: 3px;
    top: 10px;
    z-index: 2;
    opacity: 0;
  }
  .slider-img:nth-child(3) {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
    opacity: 0;
  }
  img {
    width: 100px;
    height: 100px;
  }
  @media (width >= 500px) {
    img {
      width: 450px;
      height: 450px;
    }
  }
</style>
